<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <RelativeLayout
                android:id="@+id/textLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp">

                <TextView

                    android:id="@+id/infoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Находите жилье без посредников вместе с Pillowz.
Для начала нужно пройти регистрацию. Это займет не больше минуты.
"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_sm" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/infoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textLayout"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:id="@+id/linearInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/nameInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Ваше имя?*"
                        android:textColorHint="@color/colorLine">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/nameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorLine"
                            android:imeOptions="actionNext"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:textSize="@dimen/text_sm" />

                    </android.support.design.widget.TextInputLayout>



                    <RelativeLayout
                        android:id="@+id/phoneInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/phoneCodeInputLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textColorHint="@color/colorLine">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/phoneCodeEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/colorLine"
                                android:clickable="true"
                                android:focusable="false"
                                android:imeOptions="actionNext"
                                android:inputType="none"
                                android:maxLines="1"
                                android:text="+7"
                                android:textSize="@dimen/text_sm" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/phoneInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@id/phoneCodeInputLayout"
                            android:hint="Ваш номер телефона*"
                            android:textColorHint="@color/colorLine">

                            <br.com.sapereaude.maskedEditText.MaskedEditText
                                android:id="@+id/phoneEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/colorLine"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:textSize="@dimen/text_sm"
                                app:mask="### ###-##-##" />
                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/requiredText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/infoLayout"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/requiredText"
                android:layout_marginTop="24dp"
                android:gravity="center|bottom">

                <Button
                    android:id="@+id/nextButton"
                    style="@style/Button"
                    android:text="НАЧНЕМ!"
                 />
            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminateTint="@color/colorAccent"
                android:indeterminateTintMode="src_in"
                android:progressBackgroundTint="@color/colorAccent"
                android:progressTintMode="src_in"
                android:visibility="gone" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>