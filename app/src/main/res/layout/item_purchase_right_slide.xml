<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808DFF"
    android:padding="10dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageViewMain"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10sp"

            android:scaleType="centerCrop"
            app:srcCompat="@drawable/placeholder_good" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/textViewOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"

                android:text="@string/dots"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/contentColor"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:paddingBottom="10dp">


                <TextView
                    android:id="@+id/textViewTitleDesc"
                    style="@style/MediumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2sp"
                    android:singleLine="true"
                    android:text="Samsung"
                    android:textColor="@color/white"

                    />


                <TextView
                    android:id="@+id/textViewPrice"
                    style="@style/MediumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"

                    android:layout_marginTop="3dp"
                    android:text="южнокорейская группа компаний, один из крупнейших чеболей, основанный в 1938 году."
                    android:textColor="@color/white"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fake_tenge"

                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>






