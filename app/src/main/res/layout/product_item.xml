<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/product_img_container"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:soundEffectsEnabled="false">


            <ImageView
                android:id="@+id/imgViewFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_like" />

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="100sp"
                android:layout_height="100dp"
                android:layout_below="@+id/imgViewFav"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top"
                android:adjustViewBounds="true"

                android:background="@drawable/placeholder_good"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/product_name"
                style="@style/LightText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_img"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Халал"
                android:textColor="@color/colorBlack"


                />

            <TextView
                android:id="@+id/product_desc"
                style="@style/SmallText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="75 г"
                android:textColor="@color/contentColor" />

            <Button
                android:id="@+id/product_bt_buy"
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:layout_below="@+id/product_desc"
                android:layout_gravity="bottom"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimary"

                android:drawableRight="@mipmap/addtocart"
                android:visibility="gone"

                android:paddingRight="15dp"
                android:text="1200 т"
                android:textColor="@color/white"
             />

            <LinearLayout
                android:id="@+id/container_added"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_desc"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/product_anons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:maxLength="30"
                    android:text="... "
                    android:textSize="12dp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/container_count_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/ic_decrease"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        app:srcCompat="@drawable/ic_circle_minus" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"

                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"

                        android:minWidth="40dp"
                        android:text="1"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ic_increase"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_circle_plus" />


                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>