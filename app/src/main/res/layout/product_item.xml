<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250sp"
    android:layout_margin="10dp"
    card_view:contentPadding="-8dp">

    <LinearLayout
        android:id="@+id/product_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/product_img_container"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:clickable="true"
            android:soundEffectsEnabled="false">

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="top"
                android:background="@drawable/close_placeholder"

                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
           />


            <LinearLayout
                android:id="@+id/container_added"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!--
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/check"/>
                    -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_bought_text"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:shadowColor="@color/colorAccent"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:text="Добавлено"
                    android:textColor="#fff" />

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70sp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:text="Халал"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/product_anons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:maxLength="30"
                android:text="... "
                android:textSize="12dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/container_count_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_minus"
                android:layout_width="0dp"
                android:layout_height="35dip"
                android:layout_weight="0.3"
                android:text="-"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="40dp"
                android:text="1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_plus"
                android:layout_width="0dp"
                android:layout_height="35dip"
                android:layout_weight="0.3"

                android:text="+"
                android:textSize="18sp" />


        </LinearLayout>


        <Button
            android:id="@+id/product_bt_buy"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"

            android:background="@drawable/bg_btn_bought"


            android:paddingRight="15dp"
            android:text="1200 т"
            android:textColor="@color/white" />


    </LinearLayout>
</LinearLayout>