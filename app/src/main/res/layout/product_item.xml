<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="1dp">

        <RelativeLayout
            android:id="@+id/product_img_container"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:soundEffectsEnabled="false">

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top"
                android:adjustViewBounds="true"

                android:background="@drawable/placeholder_good"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/product_bt_buy"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:paddingRight="15dp"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_alignParentBottom="true"

                android:drawableRight="@mipmap/addtocart"

                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:text="1200 т"
                android:layout_gravity="bottom"/>
            <LinearLayout
                android:id="@+id/container_added"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    android:text="Халал"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/product_anons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:maxLength="30"
                    android:text="... "
                    android:textSize="12dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/container_count_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="26dp"
                        android:id="@+id/ic_decrease"
                        android:layout_height="26dp"
                        android:layout_weight="0.3"
                        app:srcCompat="@drawable/ic_circle_minus" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minWidth="40dp"
                        android:text="1"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ic_increase"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_weight="0.3"
                        app:srcCompat="@drawable/ic_circle_plus" />


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>