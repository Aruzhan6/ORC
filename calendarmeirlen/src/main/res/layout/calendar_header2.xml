<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"

    android:orientation="vertical"
    android:padding="20sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_block"
        android:visibility="gone"

        android:orientation="vertical"

      >
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата и время"
        android:textSize="0sp"
        android:layout_marginBottom="10sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"

        android:id="@+id/time"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/firstDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="zxzx"
            android:textAlignment="textStart"
            android:textColor="#333333"
        />

        <TextView
            android:id="@+id/first_day_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="right"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_weight="1"

            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="@string/day_month_year"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time2"

        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:layout_weight="1"

            android:text="@string/last_day_selected"
            android:textAlignment="textStart"
            android:textColor="#333333"
            android:textSize="18sp"
         />

        <TextView
            android:id="@+id/last_day_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:layout_weight="1"
            android:gravity="right"

            android:maxLines="1"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="@string/day_month_year"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />



    </LinearLayout>

    </LinearLayout>
</LinearLayout>