<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:textColor="@color/black"

    android:layout_height="300dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/timeVisitWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:text="6:00"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/cardViewVisit"
        android:layout_width="match_parent"
        android:layout_height="38dp"

        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:layout_marginStart="7dp"
        android:gravity="center"
      >


    </LinearLayout>
    <LinearLayout
        android:id="@+id/cardViewVisit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"

        android:background="@drawable/bg_item_hours_multiple_top"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_close"
            tools:ignore="VectorDrawableCompat" />


        <TextView

            android:textSize="15sp"
            android:id="@+id/price"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 час  5000 тг" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardViewVisit3"
        android:visibility="gone"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/placeHolder"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Свободно" />
    </LinearLayout>

</LinearLayout>